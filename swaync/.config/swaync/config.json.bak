{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-width": 500,
  "control-center-margin-top": 4,
  "control-center-margin-bottom": 4,
  "control-center-margin-right": 4,
  "control-center-margin-left": 4,
  "notification-window-width": 500,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 3,
  "timeout-low": 3,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "mpris",
    "title",
    "dnd",
    "notifications",
    "volume",
    "backlight",
    "buttons-grid"
  ],
  "widget-config": {
    "mpris": {
      "image-size": 96,
      "image-radius": 0
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "󰆴"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label": {
      "max-lines": 5,
      "text": "Label Text"
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true,
      "empty-list-label": "No devices available"
    },
    "backlight": {
      "label": "󰃟"
    },
    "buttons-grid#controls": {
      "buttons-per-row": 2,
      "actions": [
        {
          "label": "󰤨",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "update-command": "sh -c '[[ $(nmcli radio wifi) == enabled ]] && echo true || echo false'"
        },
        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && bluetoothctl power on || bluetoothctl power off'",
          "update-command": "sh -c '[[ $(gdbus call --system --dest org.bluez --object-path /org/bluez/hci0 --method org.freedesktop.DBus.Properties.Get org.bluez.Adapter1 Powered) =~ true ]] && echo true || echo false'"
        }
      ]
    },
    "buttons-grid#power": {
      "buttons-per-row": 4,
      "actions": [
        {
          "label": "󰐥",
          "type": "normal",
          "command": "sh -c 'systemctl poweroff'"
        },
        {
          "label": "󰜉",
          "type": "normal",
          "command": "sh -c 'systemctl reboot'"
        },
        {
          "label": "󰍃",
          "type": "normal",
          "command": "sh -c 'pkill Hyprland'"
        },
        {
          "label": "󰤄",
          "type": "normal",
          "command": "sh -c 'systemctl suspend'"
        }
      ]
    }
  }
}