{
    "label" : "lock",
    "action" : "pidof hyprlock >/dev/null || hyprlock || loginctl lock-session",
    "keybind" : "l"
}

{
    "label" : "reboot",
    "action" : "systemctl reboot || loginctl reboot",
    "keybind" : "r"
}

{
    "label" : "logout",
    "action" : "pkill Hyprland || loginctl terminate-user $USER",
    "keybind" : "e"
}
{
    "label" : "shutdown",
    "action" : "systemctl poweroff || loginctl poweroff",
    "keybind" : "s"
}
