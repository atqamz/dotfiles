#!/usr/bin/env python3
"""
Emit the status text/tooltip for the Waybar custom clock module.
Keeping this logic out of the config avoids fmt/chrono compatibility issues.
"""
from __future__ import annotations

import json
from datetime import datetime


def main() -> None:
    now = datetime.now()
    payload = {
        "text": now.strftime("%d/%m/%Y  %H:%M"),
        "tooltip": "<big>{}</big>\n<b>{}</b>".format(
            now.strftime("%A, %d %B %Y"),
            now.strftime("%H:%M:%S"),
        ),
    }
    print(json.dumps(payload))


if __name__ == "__main__":
    main()
